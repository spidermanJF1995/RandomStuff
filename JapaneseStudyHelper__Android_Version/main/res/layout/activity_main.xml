<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MainActivityTitleString"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/TextColor"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/HiraganaButtonMain"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:textSize="22sp"
        android:layout_marginTop="156sp"
        android:text="Hiragana"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/ButtonBackgroundColor"
        android:textColor="@color/ButtonTextColor"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/KatakanaButtonMain"
        android:layout_width="375dp"
        android:layout_height="50sp"
        android:textSize="22sp"
        android:text="Katakana"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HiraganaButtonMain"
        android:backgroundTint="@color/ButtonBackgroundColor"
        android:textColor="@color/ButtonTextColor"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/HiraganaAndKatakanaButtonMain"
        android:layout_width="375dp"
        android:layout_height="50sp"
        android:textSize="22sp"
        android:text="Hiragana And Katakana"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/KatakanaButtonMain"
        android:backgroundTint="@color/ButtonBackgroundColor"
        android:textColor="@color/ButtonTextColor"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/KanjiButtonMain"
        android:layout_width="375dp"
        android:layout_height="50sp"
        android:textSize="22sp"
        android:text="Kanji"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HiraganaAndKatakanaButtonMain"
        android:backgroundTint="@color/ButtonBackgroundColor"
        android:textColor="@color/ButtonTextColor"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>